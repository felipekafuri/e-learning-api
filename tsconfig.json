{
  "compilerOptions": {
    "target": "ES2018",                          
    "module": "commonjs",                    
    "allowJs": true,                      
    "outDir": "./dist",                        
    "rootDir": "./",                      
    "strict": true,                          
    "strictPropertyInitialization": true, 
    "baseUrl": "./src",                      
    "esModuleInterop": true,                 
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  }
}
